<%- include('../partials/header') %>

<h1>All Roast Logs</h1>
<table id="list">
    <thead>
        <tr>
            <th>Roast Name</th>
            <th>Roast Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% if (roasts.length !== 0) { %>
        <% roasts.forEach(function(r) { %>
        <tr>
            <td><%= r.roastName %></td>
            <td><%= r.roastDate %></td>
            <td><a href="/roasts/<%= r._id %>" id="details-button" class="button-style">DETAILS</a></td>
            <td>
                <form action="/roasts/<%= r._id %>?_method=DELETE" method="POST">
                    <input id="delete-button" class="button-style" type="submit" value="DELETE">
                </form>
            </td>
            <td ><a href="/roasts/<%= r._id %>/edit" id="edit-button" class="button-style">EDIT</a></td>
        </tr>
        <% }); %>
    <% } else { %>
        <tr><td>Please add some roasts</td></tr>
    <% } %>
    </tbody>
</table>

<%- include('../partials/footer') %>
